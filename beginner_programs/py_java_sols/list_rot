public class list_rot{static int[] arr;public static void main(String[]args){arr=new int[] {1,2,3,4,5,6,7};leftRotate(arr,2);printArray(arr);}static void rverseArray(int[] arr,int start,int end){while(start<end){int temp=arr[start];arr[start]=arr[end];arr[end]=temp;start=start+1;end=end-1;}}static void leftRotate(int[] arr,int d){int n=arr.length;rverseArray(arr,0,d-1);rverseArray(arr,d,n-1);rverseArray(arr,0,n-1);}static void printArray(int[] arr){for(int i=0;i<arr.length;i++){System.out.println(arr[i]);}}}