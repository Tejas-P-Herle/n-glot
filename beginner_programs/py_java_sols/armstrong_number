import java.lang.Math;public class armstrong_number{static int x;public static void main(String[]args){x=153;System.out.println(isArmstrong(x));x=1253;System.out.println(isArmstrong(x));}static int power(int x,int y){if(y==0){return 1;}if(y%2==0){return power(x,Math.floorDiv(y,2))*power(x,Math.floorDiv(y,2));}return x*power(x,Math.floorDiv(y,2))*power(x,Math.floorDiv(y,2));}static int order(int x){int n=0;while(x!=0){n=n+1;x=Math.floorDiv(x,10);}return n;}static boolean isArmstrong(int x){int n=order(x);int temp=x;int sum1=0;while(temp!=0){int r=temp%10;sum1=sum1+power(r,n);temp=Math.floorDiv(temp,10);}return (sum1==x);}}