public class split_append{static int[] arr;static int n;static int position;public static void main(String[]args){arr=new int[] {12,10,5,6,52,36};n=arr.length;position=2;splitArr(arr,n,position);for(int i=0;i<n;i++){System.out.printf("%d ",arr[i]);}}static void splitArr(int[] arr,int n,int k){for(int i=0;i<k;i++){int x=arr[0];for(int j=0;j<n-1;j++){arr[j]=arr[j+1];}arr[n-1]=x;}}}