import java.lang.Math;public class palindrome{static String string;public static void main(String[]args){string="amaama";palindrome(string);symmetry(string);}static void palindrome(String a){int mid=Math.floorDiv((a.length()-1),2);int start=0;int last=a.length()-1;int flag=0;while(start<mid){if((a.charAt(start)==a.charAt(last))){start=start+1;last=last-1;}else{flag=1;break;}}if(flag==0){System.out.println("The entered string is palindrome");}else{System.out.println("The entered string is not palindrome");}}static void symmetry(String a){int n=a.length();int flag=0;int mid;if(n%2 != 0){mid=Math.floorDiv(n,2)+1;}else{mid=Math.floorDiv(n,2);}int start1=0;int start2=mid;while(start1<mid&&start2<n){if((a.charAt(start1)==a.charAt(start2))){start1=start1+1;start2=start2+1;}else{flag=1;break;}}if(flag==0){System.out.println("The entered string is symmetrical");}else{System.out.println("The entered string is not symmetrical");}}}